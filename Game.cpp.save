    {
    Point oldPosOfFigur [4] = {0};

    copyArray (oldPosOfFigur, posOfFigur, 4);

    for (int i = 0; i < 4; i++)
        {
        posOfFigur [i].y += 1;
        }

    if (!checkBorder (Field))
